<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>방명록</title>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <!-- Bootstrap JS 추가 -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      body {
        background-color: #f8f9fa;
        font-family: Arial, sans-serif;
      }
      .container {
        max-width: 600px;
        margin-top: 50px;
        background: white;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
      }
      h1 {
        text-align: center;
        color: #007bff;
        margin-bottom: 20px;
      }
      table {
        width: 100%;
        border-radius: 10px;
        overflow: hidden;
      }
      th,
      td {
        text-align: center;
        padding: 10px;
      }
      th {
        background: #007bff;
        color: white;
      }
      tr:nth-child(even) {
        background: #f2f2f2;
      }
      .btn-edit {
        background: #ffc107;
        border: none;
        color: white;
        padding: 5px 10px;
        border-radius: 5px;
      }
      .btn-delete {
        background: #dc3545;
        border: none;
        color: white;
        padding: 5px 10px;
        border-radius: 5px;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1>방명록</h1>
      <form id="visitorForm" class="mb-3">
        <div class="mb-2">
          <input
            type="text"
            id="userid"
            class="form-control"
            placeholder="유저아이디"
            required
          />
        </div>

        <div class="mb-2">
          <input
            type="text"
            id="name"
            class="form-control"
            placeholder="사용자이름"
            required
          />
        </div>

        <div class="mb-2">
          <input
            type="text"
            id="comment"
            class="form-control"
            placeholder="방명록"
            required
          />
        </div>
        <button
          type="button"
          class="btn btn-primary w-100"
          onclick="createData()"
        >
          등록
        </button>
      </form>

      <table class="table table-bordered">
        <thead>
          <tr>
            <th>ID</th>
            <th>작성자</th>
            <th>방명록</th>
            <th>수정</th>
            <th>삭제</th>
          </tr>
        </thead>
        <tbody>
          <% data.forEach(visitor => { %>
          <tr id="tr_<%= visitor.id %>">
            <td><%= visitor.id %></td>
            <td>
              <a href="/visitor/detail/<%= visitor.id %>"
                ><%= visitor.name %></a
              >
            </td>
            <td><%= visitor.comment %></td>
            <td>
              <button
                type="button"
                class="btn-edit"
                onclick="updatePage('<%= visitor.id %>')"
              >
                수정
              </button>
            </td>
            <td>
              <button
                type="button"
                class="btn-delete"
                onclick="deleteVisitor('<%= visitor.id %>')"
              >
                삭제
              </button>
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>

    <script>
      const createData = () => {
        const userid = document.getElementById("userid").value.trim();
        const name = document.getElementById("name").value.trim();
        const comment = document.getElementById("comment").value.trim();
        axios({
          method: "post",
          url: "visitor/post/test",
          data: { userid: userid, name: name, comment: comment },
        })
          .then((res) => {
            console.log(res);
            alert("등록성공");
            window.location.reload();
          })
          .catch((e) => {
            console.log("에러 :", e);
          });
      };

      const deleteVisitor = (id) => {
        axios({
          method: "delete",
          url: `/visitor/delete/${id}`,
        })
          .then((res) => {
            alert("삭제성공");
            window.location.reload();
          })
          .catch((e) => {
            console.log(e);
          });
      };

      const updatePage = (id) => {
        window.location.href = `/visitor/write/${id}`;
      };
    </script>
  </body>
</html>
